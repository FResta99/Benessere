<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InserimentoDieta"
    android:background="@color/white"
    android:padding="25dp">

    <TextView
        android:id="@+id/tvInserimentoColazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colazione"
        android:textSize="20sp" />

        <EditText
            android:id="@+id/etColazione1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInserimentoColazione"
            />
        <EditText
            android:id="@+id/etColazione2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etColazione1"/>

    <TextView
        android:id="@+id/tvInserimentoPranzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pranzo"
        android:textSize="20sp"
        android:layout_below="@+id/etColazione2"
        android:layout_marginTop="25dp"/>

        <EditText
            android:id="@+id/etPranzo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInserimentoPranzo" />
        <EditText
            android:id="@+id/etPranzo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPranzo1" />

    <TextView
        android:id="@+id/tvInserimentoCena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cena"
        android:textSize="20sp"
        android:layout_below="@+id/etPranzo2"
        android:layout_marginTop="25dp"/>

        <EditText
            android:id="@+id/etCena1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInserimentoCena" />
        <EditText
            android:id="@+id/etCena2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCena1"/>

    <Button
        android:id="@+id/btnInserisciDieta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inserisci dieta"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etCena2"
        android:layout_marginTop="65dp"
        android:onClick="inserisciDieta"/>

    <Button
        android:id="@+id/btnModificaDieta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifica dieta"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnInserisciDieta"
        android:layout_marginTop="25dp"
        android:onClick="modificaDieta"/>



</RelativeLayout>