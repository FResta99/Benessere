<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTestoDialog2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quale_alimento_vuoi_modificare" />


    <EditText
        android:id="@+id/spesaorig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTestoDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-115dp"
        android:autofillHints=""
        android:hint="                                 Alimento" />

    <TextView
        android:id="@+id/tvTestoDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:text="Quale_alimento_vuoi_inserire" />

    <EditText
        android:id="@+id/Spesamod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTestoDialog"
        android:hint="                                 Alimento"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="161dp"
        android:layout_marginTop="343dp"
        android:text="Invio" />


</RelativeLayout>