<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DietaCliente"
    android:padding="20dp">



    <TextView
        android:id="@+id/tvColazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colazione"/>
    <ListView
        android:id="@+id/lvDietaColazione"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/tvPranzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pranzo"
        android:layout_below="@+id/lvDietaColazione"/>
    <ListView
        android:id="@+id/lvDietaPranzo"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvPranzo"
        />
    <TextView
        android:id="@+id/tvCena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cena"
        android:layout_below="@+id/lvDietaPranzo"/>

    <ListView
        android:id="@+id/lvDietaCena"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvCena"
        />


</RelativeLayout>